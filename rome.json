{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "ignore": ["./dist/**/*.js"],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 4,
    "lineWidth": 80,
    "ignore": ["dist/**/*.js", "rome.json"]
  }
}
